<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1" id="data-fabric-web-tool">

  <servlet>
    <servlet-name>OcrForTextServlet</servlet-name>
    <servlet-class>ocrme_backend.servlets.ocr.OcrForTextServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OcrForTextServlet</servlet-name>
    <url-pattern>/ocr_for_text</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>OcrRequestServlet</servlet-name>
    <servlet-class>ocrme_backend.servlets.ocr.OcrRequestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OcrRequestServlet</servlet-name>
    <url-pattern>/ocr_request</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>TranslateServlet</servlet-name>
    <servlet-class>ocrme_backend.servlets.translate.TranslateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TranslateServlet</servlet-name>
    <url-pattern>/translate</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <context-param>
    <param-name>ocrme.bucket.pdf</param-name>
    <param-value>${ocrme.bucket.pdf}</param-value>
  </context-param>

  <context-param>
    <param-name>ocrme.bucket.request_images</param-name>
    <param-value>${ocrme.bucket.request_images}</param-value>
  </context-param>

  <context-param>
    <param-name>font.path</param-name>
    <param-value>${font.path}</param-value>
  </context-param>


</web-app>
