<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
         version="2.5">

  <servlet>
    <servlet-name>OCRServlet</servlet-name>
    <servlet-class>ocrme_backend.OCRServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OCRServlet</servlet-name>
    <url-pattern>/ocr_file</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>TranslateServlet</servlet-name>
    <servlet-class>ocrme_backend.TranslateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TranslateServlet</servlet-name>
    <url-pattern>/translate</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
